{
  "info": { "name": "RSOC Auth & Validation", "_postman_id": "rsoc-m21", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "item": [
    {
      "name": "tracking - 401 no token",
      "request": { "method": "POST", "header": [], "url": "{{baseUrl}}/api/tracking", "body": { "mode": "raw", "raw": "{}" } },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test('401', ()=>pm.response.code===401);"] } }]
    },
    {
      "name": "tracking - 422 invalid body",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/tracking",
        "body": { "mode": "raw", "raw": "{\"event\":\"click\"}" }
      },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test('422', ()=>pm.response.code===422);"] } }]
    },
    {
      "name": "tracking - 200 ok",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/tracking",
        "body": { "mode": "raw", "raw": "{\"event\":\"click\",\"clickId\":\"abc\",\"ts\":1737216000000}" }
      },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test('200', ()=>pm.response.code===200);"] } }]
    },
    {
      "name": "convert - 401 no token",
      "request": { "method": "POST", "header": [], "url": "{{baseUrl}}/api/convert", "body": { "mode": "raw", "raw": "{}" } },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test('401', ()=>pm.response.code===401);"] } }]
    },
    {
      "name": "convert - 422 invalid body",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/convert",
        "body": { "mode": "raw", "raw": "{\"event\":\"conversion\"}" }
      },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test('422', ()=>pm.response.code===422);"] } }]
    },
    {
      "name": "convert - 200 ok",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }, { "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/convert",
        "body": { "mode": "raw", "raw": "{\"event\":\"conversion\",\"clickId\":\"abc\",\"convType\":\"lead\",\"ts\":1737216000000}" }
      },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test('200', ()=>pm.response.code===200);"] } }]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "token", "value": "REPLACE_ME" }
  ]
}
